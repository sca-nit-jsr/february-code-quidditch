[10:31 PM, 2/13/2020] Dheeraj Patidar: #include<stdio.h>
#include<stdlib.h>
#include<string.h>
#define max 10
int top=-1;
char s[max];
char pop();
void push(char);
int main()
{
	char str[20];
	int i;
	printf("Enter tha string\n ");
	gets(str);
	for(i=0;i<strlen(str);i++)
	push(str[i]);
	for(i=0;i<strlen(str);i++)
	str[i]=pop();
	printf("reverse string\n");
	puts(str);
}
void push(char item)
{
	if(top==max-1)
	{
		printf("overflow");
		return;
	}
	top=top+1;
	s[top]=item;
}
char pop()
{
	char item;
	if(top==-1)
	{
		printf("underflow");
		exit(1);
	}
	item=s[top];
	top=top-1;
	return item;
}
