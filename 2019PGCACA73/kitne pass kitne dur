#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long int t,sum;
    cin>>t;
    while(t--)
    {
        sum=0;
        int a[3];
        cin>>a[0]>>a[1]>>a[2];
        sort(a,a+3);
        if(a[1]-a[0]>0)
            a[0]++;
        if(a[2]-a[1]>0)
            a[2]--;
        sum=abs(a[1]-a[0])+abs(a[2]-a[1])+abs(a[2]-a[0]);
        cout<<sum<<endl;
    }
    return 0;
}
