#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,k;
    cin>>n>>k;
    char a[n],b;
    int h[26]={0};
    cin>>a;
    while(k--)
    {
        cin>>b;
        h[b-97]++;
    }
    int count=0,sum=0;
    for(int i=0;i<n+1;i++)
    {
        if(h[a[i]-97]&&i<n)
        {
            count++;
        }
        else{
            sum+=count*(count+1)/2;
            count=0;

        }
    }
    cout<<sum;
}
~  
